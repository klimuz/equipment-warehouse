<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border"
    android:layout_margin="8dp"
    android:padding="4dp" >

    <TextView
        android:id="@+id/textViewItemName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:padding="8dp"
        android:background="@drawable/border"
        android:text="name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewCommonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="Common:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewItemName" />

    <TextView
        android:id="@+id/textViewCommonNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="123"
        app:layout_constraintBottom_toBottomOf="@+id/textViewCommonText"
        app:layout_constraintStart_toEndOf="@+id/textViewCommonText"
        app:layout_constraintTop_toTopOf="@+id/textViewCommonText" />

    <TextView
        android:id="@+id/textViewStoreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Store:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewCommonText" />

    <TextView
        android:id="@+id/textViewStoreNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123"
        app:layout_constraintBottom_toBottomOf="@+id/textViewStoreText"
        app:layout_constraintEnd_toEndOf="@+id/textViewCommonNumber"
        app:layout_constraintStart_toStartOf="@+id/textViewCommonNumber"
        app:layout_constraintTop_toTopOf="@+id/textViewStoreText" />

    <TextView
        android:id="@+id/textViewOutsideText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Outside:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewStoreText" />

    <TextView
        android:id="@+id/textViewOutsideNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123"
        app:layout_constraintBottom_toBottomOf="@+id/textViewOutsideText"
        app:layout_constraintEnd_toEndOf="@+id/textViewStoreNumber"
        app:layout_constraintStart_toStartOf="@+id/textViewStoreNumber"
        app:layout_constraintTop_toTopOf="@+id/textViewOutsideText" />

    <Button
        android:id="@+id/buttonReturn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@android:color/holo_red_dark"
        android:text="+"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewItemName" />

    <Button
        android:id="@+id/buttonGive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="-"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/buttonReturn"
        app:layout_constraintEnd_toStartOf="@+id/buttonReturn"
        app:layout_constraintTop_toTopOf="@+id/buttonReturn" />

    <TextView
        android:id="@+id/textViewGiveText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Give"
        app:layout_constraintEnd_toEndOf="@+id/buttonGive"
        app:layout_constraintStart_toStartOf="@+id/buttonGive"
        app:layout_constraintTop_toBottomOf="@+id/buttonGive" />

    <TextView
        android:id="@+id/textViewReturnText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Return"
        app:layout_constraintEnd_toEndOf="@+id/buttonReturn"
        app:layout_constraintStart_toStartOf="@+id/buttonReturn"
        app:layout_constraintTop_toBottomOf="@+id/buttonReturn" />
</androidx.constraintlayout.widget.ConstraintLayout>